-->

<div class="content">
    <div class="copyright">$ORDER_TRACK_REMIND</div>
</div>
  <!-- Footer Section -->



</div>
</td></tr></table>
$TEXT_EMAIL_NEWSLETTER
<table cellpadding=0 cellspacing=0 border=0 width='560'><tr><td>
<div class="disclaimer" style="text-align: center;">
  <div class="disclaimer1">$EMAIL_DISCLAIMER</div>
  <div class="disclaimer2">$EMAIL_SPAM_DISCLAIMER</div>
</div>

</td></tr>
</table>
</center>
</body>
</html>